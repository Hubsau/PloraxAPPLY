<?xml version="1.0" encoding="UTF-8"?>
<project name="module_ploraxapply" default="compile.module.ploraxapply">
  <dirname property="module.ploraxapply.basedir" file="${ant.file.module_ploraxapply}"/>
  
  <property name="module.jdk.home.ploraxapply" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.ploraxapply" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.ploraxapply" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.ploraxapply" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="ploraxapply.output.dir" value="${module.ploraxapply.basedir}/out/production/PloraxApply"/>
  <property name="ploraxapply.testoutput.dir" value="${module.ploraxapply.basedir}/out/test/PloraxApply"/>
  
  <path id="ploraxapply.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="ploraxapply.module.production.classpath">
    <path refid="${module.jdk.classpath.ploraxapply}"/>
    <path refid="library.spigot.classpath"/>
    <path refid="library.particleapi_v2.1.1.classpath"/>
  </path>
  
  <path id="ploraxapply.runtime.production.module.classpath">
    <pathelement location="${ploraxapply.output.dir}"/>
    <path refid="library.spigot.classpath"/>
    <path refid="library.particleapi_v2.1.1.classpath"/>
  </path>
  
  <path id="ploraxapply.module.classpath">
    <path refid="${module.jdk.classpath.ploraxapply}"/>
    <pathelement location="${ploraxapply.output.dir}"/>
    <path refid="library.spigot.classpath"/>
    <path refid="library.particleapi_v2.1.1.classpath"/>
  </path>
  
  <path id="ploraxapply.runtime.module.classpath">
    <pathelement location="${ploraxapply.testoutput.dir}"/>
    <pathelement location="${ploraxapply.output.dir}"/>
    <path refid="library.spigot.classpath"/>
    <path refid="library.particleapi_v2.1.1.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.ploraxapply">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.ploraxapply">
    <patternset refid="excluded.from.module.ploraxapply"/>
  </patternset>
  
  <path id="ploraxapply.module.sourcepath">
    <dirset dir="${module.ploraxapply.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.ploraxapply" depends="compile.module.ploraxapply.production,compile.module.ploraxapply.tests" description="Compile module PloraxApply"/>
  
  <target name="compile.module.ploraxapply.production" depends="register.custom.compilers" description="Compile module PloraxApply; production classes">
    <mkdir dir="${ploraxapply.output.dir}"/>
    <javac2 destdir="${ploraxapply.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.ploraxapply}/javac">
      <compilerarg line="${compiler.args.ploraxapply}"/>
      <bootclasspath refid="ploraxapply.module.bootclasspath"/>
      <classpath refid="ploraxapply.module.production.classpath"/>
      <src refid="ploraxapply.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.ploraxapply"/>
    </javac2>
    
    <copy todir="${ploraxapply.output.dir}">
      <fileset dir="${module.ploraxapply.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.ploraxapply.tests" depends="register.custom.compilers,compile.module.ploraxapply.production" description="compile module PloraxApply; test classes" unless="skip.tests"/>
  
  <target name="clean.module.ploraxapply" description="cleanup module">
    <delete dir="${ploraxapply.output.dir}"/>
    <delete dir="${ploraxapply.testoutput.dir}"/>
  </target>
</project>